# ==========================================================
# FusonEMS Quantum Platform - Environment Configuration
# ==========================================================
# Copy this file to .env and populate with your actual values
# See docs/ARCHITECTURE.md for detailed guidance on pool tuning

# Core Settings
PROJECT_NAME=FusonEMS Quantum Platform
ENV=development

# Database Configuration
DATABASE_URL=postgresql://admin:securepass@localhost:5432/fusonems
TELEHEALTH_DATABASE_URL=
FIRE_DATABASE_URL=

# Database Connection Pool Settings
# DB_POOL_SIZE: Number of persistent connections maintained in the pool
# DB_MAX_OVERFLOW: Additional connections allowed beyond pool_size under load
# DB_POOL_TIMEOUT: Seconds to wait for an available connection before timing out
# DB_POOL_RECYCLE: Seconds before recycling connections to avoid stale/closed connections
# See docs/ARCHITECTURE.md for deployment-tier recommendations
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Security & Authentication
JWT_SECRET_KEY=change-me
ACCESS_TOKEN_EXPIRE_MINUTES=60
STORAGE_ENCRYPTION_KEY=change-me
DOCS_ENCRYPTION_KEY=change-me

# CORS
ALLOWED_ORIGINS=http://localhost:5173

# Smart Mode & Features
SMART_MODE=1

# OIDC Configuration (optional)
OIDC_ENABLED=false
OIDC_ISSUER_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI=
OIDC_POST_LOGOUT_REDIRECT_URI=
OIDC_SCOPES=openid profile email

# Local Authentication
LOCAL_AUTH_ENABLED=true
SESSION_COOKIE_NAME=session
CSRF_COOKIE_NAME=csrf_token
AUTH_RATE_LIMIT_PER_MIN=20

# Stripe Billing (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=
STRIPE_ENV=test
BILLING_BRAND_NAME=FusonEMS Quantum
STRIPE_ENFORCE_ENTITLEMENTS=false

# Telnyx Communications (optional)
TELNYX_API_KEY=
TELNYX_NUMBER=
TELNYX_CONNECTION_ID=
TELNYX_MESSAGING_PROFILE_ID=
TELNYX_PUBLIC_KEY=
TELNYX_REQUIRE_SIGNATURE=false

# Postmark Email (optional)
POSTMARK_SERVER_TOKEN=
POSTMARK_DEFAULT_SENDER=
POSTMARK_REQUIRE_SIGNATURE=false
POSTMARK_API_BASE=https://api.postmarkapp.com
POSTMARK_SEND_DISABLED=false

# Lob Mail Services (optional)
LOB_API_KEY=

# Office Ally FTP Integration (optional)
OFFICEALLY_FTP_HOST=
OFFICEALLY_FTP_USER=
OFFICEALLY_FTP_PASSWORD=
OFFICEALLY_FTP_PORT=21

# Document Storage
DOCS_STORAGE_BACKEND=local
DOCS_STORAGE_LOCAL_DIR=storage/documents
DOCS_S3_ENDPOINT=
DOCS_S3_REGION=
DOCS_S3_BUCKET=
DOCS_S3_ACCESS_KEY=
DOCS_S3_SECRET_KEY=

# Telehealth Integration (optional)
TELEHEALTH_API_KEY=

# Legacy OpenID (optional)
OPENID_CLIENT_ID=
OPENID_SECRET=
